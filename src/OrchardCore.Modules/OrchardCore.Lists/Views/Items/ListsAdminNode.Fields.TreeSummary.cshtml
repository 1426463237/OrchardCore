@model ShapeViewModel<ListsAdminNode>
@inject OrchardCore.ContentManagement.Metadata.IContentDefinitionManager ContentDefinitionManager

@{

    var displayName = await ContentDefinitionManager.GetTypeDefinitionAsync(Model.Value.ContentType);
}

<div class="@(Model.Value.Enabled ? "" : "disabled")">
    <span>@displayName</span>
    <span class="text-muted">- @T["Lists"]</span>
</div>